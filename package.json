{
  "name": "mcp-marketplace",
  "version": "1.0.0",
  "private": true,
  "description": "MCP Marketplace Client SDK - TypeScript SDK for MCP App Marketplace",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "dev": "npm run dev --workspaces",
    "test": "npm run test --workspaces || true",
    "publish:types": "npm publish --workspace=packages/types --access public",
    "publish:client": "npm publish --workspace=packages/marketplace-client --access public",
    "publish:all": "npm run publish:types && npm run publish:client"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "devDependencies": {
    "typescript": "^5.3.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ggange/mcp-marketplace.git"
  },
  "license": "MIT",
  "author": "Giuseppe Matteo Gangemi",
  "keywords": [
    "mcp",
    "model-context-protocol",
    "marketplace",
    "sdk",
    "typescript"
  ]
}